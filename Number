x = int(input("input your number:" ))

if x > 0 and x < 100 :
 print(" its a positive number")
if x > 100:
  print(" the number is greater than 100")
if x < 0 and x > -99:
  print(" its a negative number")
if x < -100:
  print(" the number is less  than -100")
if x == 0:
  print(" you have enter 0")
